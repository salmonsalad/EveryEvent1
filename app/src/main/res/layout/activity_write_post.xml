<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:hint=" 제목"
        android:fontFamily="@font/sUITE_Light"
        android:background="@drawable/edit_text_drawble"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/contentsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:layout_margin="2dp"
        android:hint=" 내용"
        android:fontFamily="@font/sUITE_Light"
        android:background="@drawable/edit_text_drawble"
        android:inputType="textMultiLine"
        android:lines="10" />

    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="2dp"
        android:hint=" 이벤트 실행 장소(주소로)"
        android:fontFamily="@font/sUITE_Light"
        android:background="@drawable/edit_text_drawble"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/startDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="2dp"
        android:hint=" 시작하는 날짜(xxxx-xx-xx 형식으로)"
        android:fontFamily="@font/sUITE_Light"
        android:background="@drawable/edit_text_drawble"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/numberOfPeopleCanApplyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="2dp"
        android:hint=" 수용 가능한 인원(X명 형식으로)"
        android:fontFamily="@font/sUITE_Light"
        android:background="@drawable/edit_text_drawble"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/check"
        android:layout_width="343dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="확인"
        android:fontFamily="@font/sUITE_Light"
        android:background="@drawable/edit_button_drawble" />
</LinearLayout>